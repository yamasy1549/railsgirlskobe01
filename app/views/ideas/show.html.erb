<div class="row">
  <div class="col-md-8">
    <h2><%= @idea.name %></h2>
    <p><%= @idea.description %></p>
    <p>
      <%= link_to edit_idea_path(@idea), class: 'btn btn-xs' do %>
        <i class="fa fa-pencil"></i> Edit
      <% end %>
      <%= link_to @idea, data: { confirm: 'Are you sure?' }, method: :delete, class: 'btn btn-xs' do %>
        <i class="fa fa-trash-o"></i> Delete
      <% end %>
      <%= link_to ideas_path, class: 'btn btn-xs' do %>
        <i class="fa fa-arrow-left"></i> Back
      <% end %>
    </p>
    <%= image_tag(@idea.picture_url, width: '100%') if @idea.picture.present? %>
  </div>

  <div class="col-md-4">
    <h3>Comments</h3>
    <% @comments.each do |comment| %>
      <div>
        <strong><%= comment.user_name %></strong>
        <p>
          <%= comment.body %>
          <%= link_to comment_path(comment), data: { confirm: '削除してもよろしいですか？' }, method: :delete, class: 'btn btn-xs' do %>
            <i class="fa fa-trash-o"></i> Delete
          <% end %>
        </p>
      </div>
    <% end %>
    <%= render 'comments/form' %>
  </div>
</div>
