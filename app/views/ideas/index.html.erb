<p id="notice"><%= notice %></p>

<h1>Listing ideas</h1>

<% @ideas.in_groups_of(3) do |group| %>
  <div class="row">
    <% group.compact.each do |idea| %>
      <div class="col-md-4 idea">
        <%= link_to idea do %>
          <%= image_tag idea.picture_url(:thumb) if idea.picture? %>
        <% end %>
        <h3 class="idea-title"><%= link_to idea.name, idea %></h3>
        <%= idea.description %>
      </div>
    <% end %>
  </div>
<% end %>
